<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/reply_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:textColor="#00f">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=">>リプライ 12:00"
            android:textColor="#999"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingEnd="5sp"
        android:paddingStart="5sp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="42sp"
                android:layout_height="42sp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/sobaya"
                android:contentDescription="@string/message_view_user_icon_description" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/star_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="#0000"
                    android:contentDescription="@string/message_view_fav_icon_description"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/fav_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="03"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:id="@+id/name_text"
                    android:textSize="16sp"
                    android:text="なまえ"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10sp"
                    android:paddingRight="5sp"
                    android:paddingEnd="5sp"
                    android:layout_gravity="top" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="5sp"
                    android:paddingLeft="5sp"
                    android:gravity="end"
                    android:text="12:00"
                    android:textSize="16sp"
                    android:textColor="#000" />

            </LinearLayout>

            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text ="テキスト"
                android:textColor="#000"
                android:textSize="12sp"
                android:paddingLeft="20sp"
                android:paddingRight="5sp"
                android:paddingEnd="5sp"
                android:paddingTop="15sp" />

            <LinearLayout
                android:id="@+id/file_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/enquete_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="5sp"
                android:paddingStart="5sp"
                android:paddingTop="10sp" >
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@drawable/dot_line"
            android:orientation="vertical"/>

        <LinearLayout
            android:id="@+id/tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="サンプル"
                android:textColor="#F00"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>